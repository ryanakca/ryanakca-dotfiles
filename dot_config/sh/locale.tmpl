if ! export LANG=$(locale -a | grep -E -i "{{ .locale_base }}\.UTF-?8"); then
    if ! export LANG=$(locale -a | grep -E -i "C.UTF-?8"); then
        export LANG=C
    fi
fi

export LC_TIME="en_GB.UTF-8"
export LC_COLLATE=C                     # force strict lexicographic sorting

