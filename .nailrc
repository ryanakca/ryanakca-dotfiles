define clearset {
    unset folder from record smtp password
    unset smime-sign smime-sign-cert smime-sign-nickname
    unset hold
}

account l {
    call clearset
    set from="rak@rak.ac (Ryan Kavanagh)"
}

account d {
    call clearset
    set folder=imap://ryan@localhost/
    set from="Ryan Kavanagh <rak@debian.org>"
}

