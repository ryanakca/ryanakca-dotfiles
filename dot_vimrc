" Appearance
syntax on
colorscheme brookstream
set bg=dark
set modeline
set modelines=1

" Tabbing
set expandtab
set shiftwidth=4
set smarttab
set autoindent

" We want a mouse in consoles, so:"
set mouse=a

" Use system plugins
filetype plugin on

" Use system per-filetype indentation
filetype indent on

set textwidth=80

set pastetoggle=<F10>

au BufEnter ~/.local/state/neomutt/* set textwidth=72 | set list lcs=trail:-,nbsp:%
au BufEnter */gophermap set list lcs=trail:-,nbsp:%,tab:»·,space:·
