crypted_dir=${HOME}/.gnupg.encfs
decrypted_dir=${HOME}/.gnupg
if [ -n "${GNUPGHOME}" ]
then
    decrypted_dir=${GNUPGHOME}
    echo "ABC"$decrypted_dir
fi
mounted=`mount | grep ${decrypted_dir}`

if [ ! -n "${mounted}" ]
then
    encfs ${crypted_dir} ${decrypted_dir}
fi

exit $?
