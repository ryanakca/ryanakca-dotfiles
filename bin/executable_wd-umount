#!/bin/sh

case `uname` in
    OpenBSD)
        doas umount /mnt/wd
        doas bioctl -d 79665ba14a5187ba
        ;;
    Linux)
        sudo umount --lazy -f /var/lib/mpd/music
        sudo zpool export -f ztosh
        sudo cryptdisks_stop tosh
        sudo vgchange -an tosh
        sudo vgexport tosh
        ;;
    *)
        echo "Unknown host"
        exit 1
        ;;
esac
